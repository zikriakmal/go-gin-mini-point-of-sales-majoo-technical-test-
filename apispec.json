{
  "openapi": "3.0.3",
  "info": {
    "title": "MAJOO API",
    "description": "API Spec for MAJOO TEST CASE",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9090/api"
    }
  ],
  "paths": {
    "/v1/auth/login": {
      "post": {
        "summary": "Login",
        "tags": [
          "User API"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginReq"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "success"
                    },
                    "data": {
                      "$ref": "#/components/schemas/LoginRes"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/merchants": {
      "get": {
        "summary": "All Merchant",
        "tags": [
          "Merchant API"
        ],
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/PaginationParamPage"
          },
          {
            "$ref": "#/components/parameters/PaginationParamLimit"
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all merchants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_metadata": {
                          "$ref": "#/components/schemas/PaginationMetaData"
                        },
                        "records": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/MerchantRes"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/merchants/{merchantId}": {
      "get": {
        "summary": "Merchant By Id",
        "tags": [
          "Merchant API"
        ],
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/PaginationParamPage"
          },
          {
            "$ref": "#/components/parameters/PaginationParamLimit"
          },
          {
            "in": "path",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "name": "merchantId",
            "description": "Id of merchant"
          }
        ],
        "responses": {
          "200": {
            "description": "Success get merchant by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "success"
                    },
                    "data": {
                      "$ref": "#/components/schemas/MerchantRes"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/merchants/{merchantId}/outlets": {
      "get": {
        "summary": "All Outlet",
        "tags": [
          "Outlet API"
        ],
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/PaginationParamPage"
          },
          {
            "$ref": "#/components/parameters/PaginationParamLimit"
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all outlet",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_metadata": {
                          "$ref": "#/components/schemas/PaginationMetaData"
                        },
                        "records": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/OutletRes"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/merchants/{merchantId}/outlets/{outletId}": {
      "get": {
        "summary": "Outlet By Id",
        "tags": [
          "Outlet API"
        ],
        "security": [
          {
            "Auth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/PaginationParamPage"
          },
          {
            "$ref": "#/components/parameters/PaginationParamLimit"
          },
          {
            "in": "path",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "name": "merchantId",
            "description": "Id of merchant"
          },
          {
            "in": "path",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "name": "outletId",
            "description": "Id of outlet"
          }
        ],
        "responses": {
          "200": {
            "description": "Success get outlet by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "success"
                    },
                    "data": {
                      "$ref": "#/components/schemas/OutletRes"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Authentication for  API"
      }
    },
    "schemas": {
      "GasFee": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "default": 1.2
          },
          "iso": {
            "type": "string",
            "default": "WGICT"
          }
        }
      },
      "PaginationMetaData": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "default": 1
          },
          "per_page": {
            "type": "integer",
            "default": 5
          },
          "total": {
            "type": "integer",
            "default": 10
          }
        }
      },
      "MerchantRes": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "default": 1
          },
          "merchant_name": {
            "type": "string",
            "default": "Majoo Merchant 1"
          },
          "omzet": {
            "type": "number",
            "default": 100
          }
        }
      },
      "OutletRes": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "default": 1
          },
          "merchant_name": {
            "type": "string",
            "default": "Majoo outlet 1"
          },
          "outlet_name": {
            "type": "string",
            "default": "Majoo Merchant 1"
          },
          "omzet": {
            "type": "number",
            "default": 100
          }
        }
      },

      "LoginReq": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "default": "majoo"
          },
          "password": {
            "type": "string",
            "default": "password"
          }
        }
      },
      "LoginRes": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "default": "jwttoken"
          },
          "expired_at": {
            "type": "number",
            "default": 1231313
          }
        }
      }
    },
    "parameters": {
      "PaginationParamLimit": {
        "name": "limit",
        "schema": {
          "type": "integer",
          "default": 1
        },
        "in": "query",
        "description": "Size of pagination limit"
      },
      "PaginationParamPage": {
        "name": "page",
        "schema": {
          "type": "integer",
          "default": 1
        },
        "in": "query",
        "description": "Number of page"
      }
    }
  }
}
